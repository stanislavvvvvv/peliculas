<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="gestor" class="ejercicioNegocio.GestorPeliculas"
		scope="singleton">
		<property name="daoPeliculas" ref="dao"></property>
	</bean>

	<bean id="mapa" class="java.util.HashMap" scope="prototype">
	</bean>

	<bean id="dao" class="ejercicioDao.MemoryDao" scope="singleton">
		<property name="miMapa" ref="mapa"></property>
	</bean>

	<bean id="pelicula" class="ejercicio.modelo.Pelicula"
		scope="prototype">
	</bean>
</beans>
